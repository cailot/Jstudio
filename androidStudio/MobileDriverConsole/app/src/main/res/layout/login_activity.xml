<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#003B6F"
    android:paddingLeft="80dp"
    android:paddingRight="50dp"
    android:paddingBottom="@android:dimen/notification_large_icon_width"
    android:paddingTop="@dimen/abc_action_bar_progress_bar_size">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transit Management System"
        android:id="@+id/log_in_title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:paddingBottom="@dimen/abc_action_bar_stacked_max_height" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_marginRight="50dp">


            <EditText
                android:id="@+id/log_in_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/colorSkyBlue"
                android:textColorHint="@color/colorWhite"
                android:focusable="true"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="@dimen/abc_action_bar_stacked_max_height"
                android:hint="Email" />

            <EditText
                android:id="@+id/log_in_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/log_in_email_txt"
                android:textColorHint="@color/colorWhite"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:backgroundTint="@color/colorSkyBlue"
                android:textColor="@color/colorWhite" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_navy_rounded_corners">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_in_img"
                android:layout_gravity="center"
                android:src="@drawable/login"
                android:layout_marginLeft="@dimen/abc_dialog_padding_material"
                android:scaleType="centerInside" />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>
