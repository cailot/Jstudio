<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/colorGrey"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:id="@+id/trip_off_route_txt"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_weight="0.00"
        android:text="@string/trip_off_route_txt_description"
        android:background="@drawable/bg_navy_rounded_corners"
        android:textColor="@color/colorWhite"
        android:minLines="3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material"
        android:textSize="@dimen/abc_dialog_padding_top_material" />

    <TextView
        android:id="@+id/trip_off_vehicle_txt"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="4dip"
        android:text="@string/trip_off_vehicle_txt_description"
        android:background="@drawable/bg_navy_rounded_corners"
        android:textColor="@color/colorWhite"
        android:minLines="3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textSize="@dimen/abc_dialog_padding_top_material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:gravity="center_horizontal|bottom"
        android:weightSum="1"
        android:clickable="false">

        <Button
            android:id="@+id/trip_off_logout_btn"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="@android:dimen/notification_large_icon_width"
            android:text="@string/trip_off_logout_btn_description"
            android:background="@drawable/bg_navy_rounded_corners"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/abc_text_size_display_4_material" />

        <Button
            android:id="@+id/trip_off_tripon_btn"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="@android:dimen/notification_large_icon_width"
            android:background="@drawable/bg_navy_rounded_corners"
            android:text="@string/trip_off_tripon_btn_description"
            android:textColor="#ffffff" />


    </LinearLayout>




</LinearLayout>