<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:stretchColumns="1"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    android:background="@color/colorNavy">

<!-- Row 1 -->
<TableRow>

    <TextView
        android:id="@+id/fare_origin_txt"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="4dip"
        android:layout_weight="1"
        android:text="@string/fare_origin_description"
        android:background="@drawable/bg_grey_rounded_corners"
        android:textColor="@color/colorWhite"
        android:minLines="2"
        android:gravity="center"
        android:textSize="@dimen/abc_floating_window_z" />
</TableRow>

<!-- Row 2 -->
<TableRow>
    <TextView
        android:id="@+id/fare_destination_txt"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="3dip"
        android:layout_weight="1"
        android:text="@string/fare_destination_description"
        android:background="@drawable/bg_grey_rounded_corners"
        android:textColor="@color/colorWhite"
        android:minLines="2"
        android:gravity="center"
        android:textSize="@dimen/abc_floating_window_z" />

</TableRow>


<!-- Row 3 -->
<TableRow>
    <TextView
        android:id="@+id/fare_passenger_count_txt"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="3dip"
        android:layout_weight="1"
        android:text="@string/fare_passenger_count_description"
        android:background="@drawable/bg_grey_rounded_corners"
        android:textColor="@color/colorWhite"
        android:minLines="2"
        android:gravity="center"
        android:textSize="@dimen/abc_floating_window_z" />
</TableRow>

    <!-- just draw a red line -->
<View
    android:layout_height="15dip"
    android:background="@color/colorNavy" />
<!-- Row 4 -->
<TableRow>
    <!-- Column 1 -->
    <TextView
        android:id="@+id/fare_price_txt"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/fare_price_description"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_margin="5dip"
        android:minLines="4"
        android:textColor="@color/colorWhite"
        android:allowUndo="false" />

    <!-- Column 2 -->
    <TextView
        android:id="@+id/fare_payment_txt"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Payment"
        android:layout_margin="4dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@drawable/bg_navy_rounded_corners"
        android:minLines="3"
        android:textColor="@color/colorWhite" />
</TableRow>
</TableLayout>
